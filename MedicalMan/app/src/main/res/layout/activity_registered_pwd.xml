<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mm.medicalman.RegisteredActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/background"
        fresco:placeholderImageScaleType="focusCrop" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView"
        android:layout_width="107dp"
        android:layout_height="106dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71.5dp"
        fresco:actualImageScaleType="fitCenter"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/logo"
        fresco:placeholderImageScaleType="fitCenter" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/simpleDraweeView"
        android:layout_marginEnd="67.3dp"
        android:layout_marginRight="67.3dp"
        android:layout_marginTop="90.5dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="#00000000"
        android:ems="10"
        android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890*^%$#@!~?./-+\][,\=_{}|`:;'"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#78b2bf"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/button"
        android:layout_marginTop="25.5dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="#00000000"
        android:ems="10"
        android:hint="请确认密码"
        android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890*^%$#@!~?./-+\][,\=_{}|`:;'"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#78b2bf"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_lin2"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="#ffffff" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/button"
        android:layout_width="21dp"
        android:layout_height="29dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/simpleDraweeView"
        fresco:actualImageScaleType="fitCenter"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/password"
        fresco:placeholderImageScaleType="fitCenter" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/button2"
        android:layout_width="21dp"
        android:layout_height="29dp"
        android:layout_below="@+id/button"
        android:layout_marginTop="20.5dp"
        android:layout_marginLeft="68dp"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/password"
        fresco:placeholderImageScaleType="fitCenter" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tv_lin2"
        android:layout_marginTop="107.5dp"
        android:background="@drawable/btn_regist_5dp"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23.5dp"
        android:layout_marginLeft="15dp"
        android:text="返回"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>
