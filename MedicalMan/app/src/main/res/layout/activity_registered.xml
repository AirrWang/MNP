<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mm.medicalman.RegisteredActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/background"
        fresco:placeholderImageScaleType="focusCrop" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView"
        android:layout_width="107dp"
        android:layout_height="106dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71.5dp"
        fresco:actualImageScaleType="fitCenter"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/logo"
        fresco:placeholderImageScaleType="fitCenter" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/simpleDraweeView"
        android:layout_marginEnd="67.3dp"
        android:layout_marginRight="67.3dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="#00000000"
        android:ems="10"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#78b2bf"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/button"
        android:layout_marginTop="25.5dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="#00000000"
        android:ems="10"
        android:hint="验证码"
        android:inputType="number"
        android:maxLength="6"
        android:paddingLeft="6.5dp"
        android:textColor="#ffffff"
        android:textColorHint="#78b2bf"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_code"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_regist_5dp_coding"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_lin2"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="6.5dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/tv_line1"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="#ffffff" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/button"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:layout_below="@+id/simpleDraweeView"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="86dp"
        fresco:actualImageScaleType="fitCenter"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/mobile"
        fresco:placeholderImageScaleType="fitCenter" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/button2"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:layout_below="@+id/button"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="26dp"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/captcha"
        fresco:placeholderImageScaleType="fitCenter" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/tv_lin2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="107.5dp"
        android:background="@drawable/btn_regist_5dp"
        android:text="立即注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/r_registration_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_registration_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册即代表同意"
            android:textColor="#78b2c0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fw_xy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_registration_protocol"
            android:layout_toRightOf="@+id/tv_registration_protocol"
            android:text="《服务协议》"
            android:textColor="#48a7c1"
            android:textSize="12sp" />

        <TextView
            android:layout_width="71dp"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_fw_xy"
            android:layout_toEndOf="@+id/tv_registration_protocol"
            android:layout_toRightOf="@+id/tv_registration_protocol"
            android:background="#48a7c1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23.5dp"
        android:text="返回"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>
