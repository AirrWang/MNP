<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/background"
        fresco:placeholderImageScaleType="focusCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center_horizontal"
            android:layout_width="107dp"
            android:layout_height="106dp"
            android:layout_marginTop="71.5dp"
            fresco:fadeDuration="1"
            fresco:placeholderImage="@drawable/logo"
            fresco:placeholderImageScaleType="focusCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginRight="67.3dp"
            android:layout_marginTop="86dp"
            android:gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="20dp"
                android:layout_height="29dp"
                fresco:fadeDuration="1"
                fresco:placeholderImage="@drawable/mobile"
                fresco:placeholderImageScaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_login_tel"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#00000000"
                    android:hint="手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/mm_ziti_bai"
                    android:textColorHint="#78b2bf"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/mm_ziti_bai" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginRight="67.3dp"
            android:layout_marginTop="20.5dp"
            android:gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="21dp"
                android:layout_height="29dp"
                fresco:fadeDuration="1"
                fresco:placeholderImage="@drawable/password"
                fresco:placeholderImageScaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_login_psw"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#00000000"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890*^%$#@!~?./-+\][,\=_{}|`:;'"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/mm_ziti_bai"
                    android:textColorHint="#78b2bf"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/mm_ziti_bai" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67dp"
            android:layout_marginRight="67.3dp"
            android:layout_marginTop="1.5dp"
            android:gravity="end"
            android:text="忘记密码?"
            android:textColor="#78b2bf"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="89.5dp"
            android:background="@drawable/button_rectangle_circl_10_login"
            android:text="登录"
            android:textColor="@color/mm_ziti_bai"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注册"
                android:textColor="#97C2CC"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_weixin_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="微信登录"
                android:textColor="#97C2CC"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>